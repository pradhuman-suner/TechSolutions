@model TechSolutionsApplication.Models.Comment


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal mt-5 w-100 mt-5 border-top py-3">
        <h4>Comment</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            
            <div class="col-md-10 w-100 mt-2">
                @Html.TextAreaFor(model => model.Comment1, new { @class = "form-control", @rows = 5 })
                @Html.ValidationMessageFor(model => model.Comment1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-2">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn btn-primary d-inline" type="submit">Submit</button>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
