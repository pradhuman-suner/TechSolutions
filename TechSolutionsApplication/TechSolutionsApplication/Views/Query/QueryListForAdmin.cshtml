@model IEnumerable<TechSolutionsApplication.Models.Query>

<h2 class="my-5">Questions</h2>
<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            Question 
        </th>
        
        <th>
            Date and Time
        </th>
        <th>
            Answers
        </th>
        <th>
           Comments
        </th>
        <th>
           Posted By
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ques)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.QDatetime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AnsCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CommentCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        @*<td>
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>*@
    </tr>
}

</table>
